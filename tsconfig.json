{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "esnext",
      "es6"
    ],
    "sourceMap": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./build",
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "types": ["svelte","@types/jest", "."],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/"
    ]
  },
  "exclude": [
    "node_modules/*"
  ],
  "include": [
    "src/**/*.ts"
  ]
}